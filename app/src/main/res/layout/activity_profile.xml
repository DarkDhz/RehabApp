<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".view.ProfileActivity">


    <ImageButton
        android:id="@+id/edit_profile_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:onClick="editProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_icon" />


    <ImageButton
        android:id="@+id/global_return_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/img_return"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="407dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:onClick="returnToMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/global_returnbt_desc"
        />


    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/profile_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_title" />

        <TextView
            android:id="@+id/profile_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/UserName" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sex_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_layout">


        <TextView
            android:id="@+id/sex_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_sex_title" />

        <TextView
            android:id="@+id/sex_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/profile_sex_value" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/age_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_layout">

        <TextView
            android:id="@+id/textView_Age_Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_age_title" />

        <TextView
            android:id="@+id/textView_Age_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_age_value" />

        <TextView
            android:id="@+id/textView_Age_Units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:text="@string/age_unit"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/height_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age_layout">


        <TextView
            android:id="@+id/textView_Height_Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_height_title" />

        <TextView
            android:id="@+id/textView_Height_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_height_value" />

        <TextView
            android:id="@+id/e_textView_Height_Units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_units"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/weight_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_layout">


        <TextView
            android:id="@+id/TextView_Weight_Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_weight_title" />

        <TextView
            android:id="@+id/textView_Weight_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_weight_value" />

        <TextView
            android:id="@+id/e_textView_Weight_Units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight_units"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/imc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_layout">

        <TextView
            android:id="@+id/TextView_IMC_Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_IMC_title" />

        <TextView
            android:id="@+id/textView_IMC_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_IMC_value" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/wheel_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imc_layout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/TextView_WheelChair_Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingEnd="50dp"
            android:text="@string/profile_chair_title" />

        <TextView
            android:id="@+id/textView_WheelChair_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_wheel_value" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>