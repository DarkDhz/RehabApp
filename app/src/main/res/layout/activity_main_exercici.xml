<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:gravity="center"
    android:background="@drawable/background2"

    tools:context=".view.MainExerciciActivity">

    <ListView
        android:id="@+id/main_exercici_list"

        android:layout_width="325dp"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:divider="#00000000"
        android:dividerHeight="10dip"
        app:layout_constraintBottom_toTopOf="@+id/main_exercice_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_exercice_select"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/boton_1"
        android:onClick="goToMuscle"
        android:text="@string/main_exercice_select_button"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
